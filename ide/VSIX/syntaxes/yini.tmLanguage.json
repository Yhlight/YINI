{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "YINI",
  "scopeName": "source.yini",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#sections"
    },
    {
      "include": "#key_value_pairs"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.yini",
          "begin": "//",
          "end": "$",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.yini"
            }
          }
        },
        {
          "name": "comment.block.yini",
          "begin": "/\\*",
          "end": "\\*/",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.yini"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.yini"
            }
          }
        }
      ]
    },
    "sections": {
      "patterns": [
        {
          "name": "entity.name.section.yini",
          "begin": "^\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.section.begin.yini"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.section.end.yini"
            }
          },
          "patterns": [
            {
              "name": "keyword.control.section.yini",
              "match": "#(define|include|schema|end_schema)"
            },
            {
              "name": "entity.name.section.title.yini",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "name": "keyword.operator.inheritance.yini",
              "match": ":"
            },
            {
              "name": "entity.other.inherited-class.yini",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        }
      ]
    },
    "key_value_pairs": {
      "patterns": [
        {
          "name": "meta.key-value.yini",
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*)\\s*([+=]=)\\s*(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.tag.yini"
            },
            "2": {
              "name": "keyword.operator.assignment.yini"
            },
            "3": {
              "patterns": [
                {
                  "include": "#values"
                }
              ]
            }
          }
        }
      ]
    },
    "values": {
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "name": "string.quoted.double.yini",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.yini",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.language.boolean.yini",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.numeric.float.yini",
          "match": "\\b-?[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.yini",
          "match": "\\b-?[0-9]+\\b"
        },
        {
          "name": "constant.other.color.yini",
          "match": "#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{8})\\b"
        },
        {
          "name": "variable.other.macro.yini",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.env.yini",
          "begin": "\\$\\{",
          "end": "\\}",
          "patterns": [
            {
              "name": "variable.name.yini",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "name": "keyword.operator.yini",
              "match": ":"
            }
          ]
        },
        {
          "name": "variable.other.xref.yini",
          "begin": "@\\{",
          "end": "\\}",
          "patterns": [
            {
              "name": "variable.name.yini",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "name": "punctuation.separator.yini",
              "match": "\\."
            }
          ]
        },
        {
          "name": "keyword.operator.arithmetic.yini",
          "match": "[+\\-*/%]"
        }
      ]
    }
  }
}