{
    "name": "yini",
    "displayName": "YINI",
    "description": "YINI Language Support",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:yini"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [{
            "id": "yini",
            "aliases": ["YINI", "yini"],
            "extensions": [".yini",".YINI"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "yini",
            "scopeName": "source.yini",
            "path": "./syntaxes/yini.tmLanguage.json"
        }],
        "configuration": {
            "title": "YINI",
            "properties": {
                "yini.cli.path": {
                    "type": "string",
                    "default": "",
                    "description": "Specifies the absolute path to the yini-cli executable for syntax checking."
                }
            }
        }
    }
}