{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "YINI",
    "scopeName": "source.yini",
    "patterns": [
        { "include": "#comments" },
        { "include": "#sections" },
        { "include": "#key_value_pairs" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.yini",
                    "match": "//.*"
                },
                {
                    "name": "comment.block.yini",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "sections": {
            "patterns": [
                {
                    "name": "entity.name.section.directive.yini",
                    "begin": "\\[(#)(define|include|schema)\\]",
                    "beginCaptures": {
                        "1": { "name": "keyword.control.directive.yini" },
                        "2": { "name": "keyword.control.directive.yini" }
                    },
                    "end": "(?=\\n)",
                    "contentName": "meta.section.directive.yini"
                },
                {
                    "name": "entity.name.section.yini",
                    "begin": "(\\[)([^\\s\\]:]+)",
                    "beginCaptures": {
                        "1": { "name": "punctuation.definition.section.begin.yini" },
                        "2": { "name": "entity.name.section.yini" }
                    },
                    "end": "(\\])",
                    "endCaptures": {
                        "1": { "name": "punctuation.definition.section.end.yini" }
                    },
                    "patterns": [
                        { "include": "#inheritance" }
                    ]
                }
            ]
        },
        "inheritance": {
            "begin": ":",
            "beginCaptures": {
                "0": { "name": "punctuation.separator.inheritance.yini" }
            },
            "end": "(?=\\])",
            "patterns": [
                {
                    "name": "entity.other.inherited-class.yini",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                },
                {
                    "name": "punctuation.separator.inheritance.yini",
                    "match": ","
                }
            ]
        },
        "key_value_pairs": {
            "patterns": [
                {
                    "name": "variable.parameter.yini",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*=)"
                },
                {
                    "name": "keyword.operator.assignment.yini",
                    "match": "(=|\\+=)"
                },
                { "include": "#schema_rules" },
                { "include": "#values" }
            ]
        },
        "schema_rules":{
            "patterns":[
                {
                    "name": "keyword.control.validation.presence.yini",
                    "match": "[!?]"
                },
                {
                    "name": "keyword.control.validation.empty.yini",
                    "match": "[e~]"
                },
                {
                    "name": "keyword.operator.assignment.default.yini",
                    "match": "="
                },
                {
                    "name": "keyword.control.validation.range.yini",
                    "match": "\\b(min|max)="
                }
            ]
        },
        "values": {
            "patterns": [
                {
                    "name": "string.quoted.double.yini",
                    "begin": "\"",
                    "end": "\""
                },
                {
                    "name": "constant.numeric.yini",
                    "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
                },
                {
                    "name": "constant.language.boolean.yini",
                    "match": "(?i)\\b(true|false)\\b"
                },
                {
                    "name": "keyword.other.yini",
                    "match": "(?i)\\b(Dyna|color|coord|path|list|array)\\b"
                },
                {
                    "name": "variable.other.macro.yini",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "name": "variable.other.env.yini",
                    "match": "\\$\\{[a-zA-Z_][a-zA-Z0-9_]*\\}"
                },
                {
                    "name": "variable.other.cross-section.yini",
                    "match": "@\\{[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z_][a-zA-Z0-9_]*\\}"
                },
                {
                    "name": "constant.other.color.hex.yini",
                    "match": "#[0-9a-fA-F]{6}"
                }
            ]
        }
    }
}