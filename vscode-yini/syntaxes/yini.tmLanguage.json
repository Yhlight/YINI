{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "YINI",
    "scopeName": "source.yini",
    "patterns": [
        { "include": "#comments" },
        { "include": "#sections" },
        { "include": "#key-value" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.yini",
                    "match": "//.*"
                },
                {
                    "name": "comment.block.yini",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "sections": {
            "patterns": [
                {
                    "name": "entity.name.section.yini",
                    "begin": "\\[",
                    "end": "\\]",
                    "patterns": [
                        {
                            "name": "entity.name.tag.yini",
                            "match": "[a-zA-Z0-9_#]+"
                        }
                    ]
                },
                {
                    "name": "entity.other.inherited-class.yini",
                    "begin": ":",
                    "end": "(?=\\s*($|\n))",
                    "patterns": [
                        {
                            "name": "entity.name.tag.yini",
                            "match": "[a-zA-Z0-9_]+"
                        }
                    ]
                }
            ]
        },
        "key-value": {
            "patterns": [
                {
                    "name": "keyword.other.yini",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*=)"
                },
                {
                    "name": "keyword.operator.assignment.yini",
                    "match": "(=|\\+=)"
                },
                { "include": "#values" }
            ]
        },
        "values": {
            "patterns": [
                { "include": "#strings" },
                { "include": "#numbers" },
                { "include": "#keywords" },
                { "include": "#arrays" },
                { "include": "#calls" }
            ]
        },
        "strings": {
            "name": "string.quoted.double.yini",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.yini",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.yini",
                    "match": "\\b[0-9]+\\.[0-9]+\\b"
                },
                {
                    "name": "constant.numeric.integer.yini",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "constant.language.yini",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "support.function.yini",
                    "match": "\\b(Coord|Color|Path|Dyna|coord|color|path|dyna)\\b"
                }
            ]
        },
        "arrays": {
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                { "include": "#values" },
                {
                    "name": "punctuation.separator.comma.yini",
                    "match": ","
                }
            ]
        },
        "calls": {
            "begin": "\\(",
            "end": "\\)",
            "patterns": [
                { "include": "#values" },
                {
                    "name": "punctuation.separator.comma.yini",
                    "match": ","
                }
            ]
        }
    }
}