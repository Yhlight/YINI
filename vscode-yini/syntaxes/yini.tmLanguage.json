{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "YINI",
  "scopeName": "source.yini",
  "patterns": [
    { "include": "#comments" },
    { "include": "#sections" },
    { "include": "#keys" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#arrays" },
    { "include": "#maps" },
    { "include": "#coordinates" },
    { "include": "#colors" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.yini", "match": "//.*$" },
        { "name": "comment.block.yini", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "sections": {
      "patterns": [
        {
          "name": "entity.name.section.yini",
          "match": "^\\s*\\[(#define|#include|[A-Za-z_][A-Za-z0-9_]*)\\](?:\\s*:\\s*[A-Za-z0-9_,\\s]+)?"
        }
      ]
    },
    "keys": {
      "patterns": [
        {
          "name": "variable.other.key.yini",
          "match": "^\\s*[A-Za-z_][A-Za-z0-9_]*\\s*(?==)"
        }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.assignment.yini", "match": "=|\\+=" },
        { "name": "punctuation.separator.comma.yini", "match": "," },
        { "name": "punctuation.bracket.square.yini", "match": "[\\[\\]]" },
        { "name": "punctuation.bracket.curly.yini", "match": "[{}]" },
        { "name": "punctuation.bracket.round.yini", "match": "[()]" },
        { "name": "punctuation.colon.yini", "match": ":" }
      ]
    },
    "strings": {
      "patterns": [
        { "name": "string.quoted.double.yini", "begin": "\"", "end": "\"", "patterns": [ { "name": "constant.character.escape.yini", "match": "\\\\." } ] }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.yini", "match": "(?<![A-Za-z0-9_])(\\d+\\.\\d+)(?![A-Za-z0-9_])" },
        { "name": "constant.numeric.integer.yini", "match": "(?<![A-Za-z0-9_])(\\d+)(?![A-Za-z0-9_])" }
      ]
    },
    "booleans": {
      "patterns": [
        { "name": "constant.language.boolean.true.yini", "match": "(?i)\\btrue\\b" },
        { "name": "constant.language.boolean.false.yini", "match": "(?i)\\bfalse\\b" }
      ]
    },
    "arrays": {
      "patterns": [
        { "name": "meta.array.yini", "begin": "\\[", "end": "\\]" }
      ]
    },
    "maps": {
      "patterns": [
        { "name": "meta.map.yini", "begin": "{", "end": "}" }
      ]
    },
    "coordinates": {
      "patterns": [
        { "name": "meta.coordinate.yini", "match": "\\(\\s*[-+]?(?:\\d+\\.?\\d*|\\.\\d+)\\s*,\\s*[-+]?(?:\\d+\\.?\\d*|\\.\\d+)(?:\\s*,\\s*[-+]?(?:\\d+\\.?\\d*|\\.\\d+))?\\s*\\)" }
      ]
    },
    "colors": {
      "patterns": [
        { "name": "constant.other.color.hex.yini", "match": "#(?:[0-9a-fA-F]{6})\\b" },
        { "name": "support.function.color.rgb.yini", "match": "(?i)\\b(?:rgb|RGB)\\s*\\(\\s*\\d+\\s*,\\s*\\d+\\s*,\\s*\\d+\\s*\\)" }
      ]
    }
  },
  "fileTypes": ["yini", "YINI"],
  "uuid": "c1a3a8c1-0f3e-4d8d-9c22-f8f0d0afc0c1"
}

